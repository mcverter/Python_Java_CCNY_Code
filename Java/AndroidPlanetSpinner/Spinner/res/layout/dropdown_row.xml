<?xml version="1.0" encoding="utf-8"?>
<!--
  File: dropdown_ row.xml
  Updated by: Mitchell Verter 7/19/2012
  This file is used to display the rows for the spinner 
  when it  is popped out.
  Each row displays the name of the planet and its image.
  
  I kept on getting an warning instructing me to use a
  drawable within my textview tag, but I couldn't get that to work
  so I am staying with this design.
  
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/PlanetIcon"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_marginLeft ="5dp" 
        android:id="@+id/PlanetName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textStyle="bold" />

</LinearLayout>